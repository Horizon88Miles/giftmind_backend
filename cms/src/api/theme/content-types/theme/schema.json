{
  "kind": "collectionType",
  "collectionName": "themes",
  "info": {
    "singularName": "theme",
    "pluralName": "themes",
    "displayName": "theme"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "subtitle": {
      "type": "string"
    },
    "coverUrl": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "story": {
      "type": "text"
    },
    "insightText": {
      "type": "string"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::item.item"
    },
    "isPrivateBoard": {
      "type": "boolean",
      "default": false
    }
  }
}
